{
  "title": "Preview a la VIM",

  "rules": [{

      "description": "map jk",
      "manipulators": [{
          "type": "basic",
          "from": {
            "key_code": "j"
          },
          "to": [{
            "key_code": "down_arrow"
          }],
          "conditions": [{
            "type": "frontmost_application_if",
            "bundle_identifiers": ["^com.apple.Preview$"]
          }]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "k"
          },
          "to": [{
            "key_code": "up_arrow"
          }],
          "conditions": [{
            "type": "frontmost_application_if",
            "bundle_identifiers": ["^com.apple.Preview$"]
          }]
        }
      ]
    },
    {
      "description": "map JK",
      "manipulators": [{
          "type": "basic",
          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": [
                "left_shift"
              ]
            }
          },
          "to": [{
            "key_code": "down_arrow",
            "modifiers": [
              "left_command"
            ]
          }],
          "conditions": [{
            "type": "frontmost_application_if",
            "bundle_identifiers": ["^com.apple.Preview$"]
          }]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "k",
            "modifiers": {
              "mandatory": [
                "left_shift"
              ]
            }
          },
          "to": [{
            "key_code": "up_arrow",
            "modifiers": [
              "left_command"
            ]
          }],
          "conditions": [{
            "type": "frontmost_application_if",
            "bundle_identifiers": ["^com.apple.Preview$"]
          }]
        }
      ]
    },
    {
      "description": "map hl",
      "manipulators": [{
          "type": "basic",
          "from": {
            "key_code": "h"
          },
          "to": [{
            "key_code": "up_arrow",
            "modifiers": [
              "left_option"
            ]
          }],
          "conditions": [{
            "type": "frontmost_application_if",
            "bundle_identifiers": ["^com.apple.Preview$"]
          }]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "l"
          },
          "to": [{
            "key_code": "down_arrow",
            "modifiers": [
              "left_option"
            ]
          }],
          "conditions": [{
            "type": "frontmost_application_if",
            "bundle_identifiers": ["^com.apple.Preview$"]
          }]
        }
      ]
    },
